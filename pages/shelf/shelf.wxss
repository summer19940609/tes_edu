.book-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.book-item {
  display: flex;
  justify-content: flex-start;
}

.book-cover {
  padding: 5px;
  width: 30%;
}

.book-desc {
  width: 70%;
  padding: 5px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.book-desc-name {
  display: inline-block;
  font-size: 16px;
}

.book-desc-content {
  display: inline-block;
  font-size: 12px;
  color: #aaa;
}